<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.fragment.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/kuang"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/sao"
            android:id="@+id/sao"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/sou"
            android:id="@+id/sou"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            />
        <EditText
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_sou"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_keyboard_voice_black_24dp"
            android:layout_marginTop="8dp"
            />
    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recl_left"
                android:layout_width="0dp"
                android:background="#cccc"
                android:layout_height="match_parent"
                android:layout_weight="2"></android.support.v7.widget.RecyclerView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recl_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"></android.support.v7.widget.RecyclerView>
        </LinearLayout>



</LinearLayout>